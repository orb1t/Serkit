                            	BorderBrush="{x:Null}" Background="{x:Null}" FontFamily="Segoe UI Symbol" 
                            	FontSize="20" BorderThickness="0" Padding="0" Cursor="Hand" Margin="440,0,0,0" Click="sequence_Click">
                                <StackPanel>
                                    <TextBlock x:Name="penIcon_Copy11" Text="&#xE201;" TextAlignment="Center" FontSize="20" Height="28" Width="25" Foreground="#FFB8B8B8" Padding="0"/>
                                    <TextBlock Text="SEQ" TextAlignment="Center" FontSize="10"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                        <Button x:Name="flipFlopPanelButton" Content="Flip Flops" Margin="206,0,0,0" Padding="0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="60" FontSize="11" Height="20" Background="#FFEAEAEA" BorderBrush="{x:Null}" BorderThickness="0" Click="flipFlopPanelButton_Click"/>
                        <Button x:Name="logicPanelButton" Content="Logic" Margin="146,0,0,0" Padding="0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="60" FontSize="11" Height="20" Background="#FFC1FFCF" BorderBrush="{x:Null}" BorderThickness="0" Click="logicPanelButton_Click"/>
                        <Button x:Name="memoryPanelButton" Content="RAM" Margin="266,0,0,0" Padding="0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="60" FontSize="11" Height="20" Background="#FFEAEAEA" BorderBrush="{x:Null}" BorderThickness="0" Click="memoryPanelButton_Click"/>
                        <Button x:Name="eraseMode" HorizontalAlignment="Left" 
							Margin="95,4,0,0" VerticalAlignment="Top" Width="46" Height="46" 
							BorderBrush="{x:Null}" Background="{x:Null}" FontFamily="Segoe UI Symbol" 
							FontSize="20" BorderThickness="0" Padding="0" Click="eraseMode_Click">
                            <StackPanel>
                                <TextBlock Text="&#xE106;" TextAlignment="Center" FontSize="20" Height="25" Width="25" Foreground="#FF979797" Padding="0" Margin="0"/>
                                <TextBlock Text="Erase" TextAlignment="Center" FontSize="10"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="stopCircuit" Content="&#xE20D;" Margin="94,50,0,0" Width="47" Height="30" FontFamily="Segoe UI Symbol" IsCancel="True" Background="#FFF7F7F7" BorderThickness="0" BorderBrush="{x:Null}" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Left" Panel.ZIndex="1" Padding="1,0,1,1" Foreground="#FFE85151" Click="stopCircuit_Click"/>
                        <Button x:Name="pauseCircuit" Content="&#xE214;" Margin="50,50,0,0" Width="45" Height="30" FontFamily="Segoe UI Symbol" IsCancel="True" Background="#FFF7F7F7" BorderThickness="0" BorderBrush="{x:Null}" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Left" Click="exit_Click" Panel.ZIndex="1" Padding="1,0,1,1" Foreground="#FF7688FF"/>
                        <Button x:Name="runCircuit" Content="&#xE213;" Margin="5,50,0,0" Width="45" Height="30" FontFamily="Segoe UI Symbol" IsCancel="True" Background="#FFF7F7F7" BorderThickness="0" BorderBrush="{x:Null}" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Left" Panel.ZIndex="1" Padding="1,-3,1,1" Foreground="#FF1FC53D" Click="runCircuit_Click"/>
                    </Grid>
                    <Grid x:Name="editGrid" Background="#FFF7F7F7">
                        <Grid x:Name="seqEdit" d:IsHidden="True">
                            <TextBlock HorizontalAlignment="Left" Margin="25,18,0,0" TextWrapping="Wrap" Text="CLOCK (Hertz)" VerticalAlignment="Top" FontWeight="Bold"/>
                            <ComboBox x:Name="clockSpeed" HorizontalAlignment="Left" Margin="25,39,0,0" VerticalAlignment="Top" Width="120" BorderBrush="{x:Null}" Background="{x:Null}" BorderThickness="0" IsEditable="True" SelectedIndex="1">
                                <System:Int32>1</System:Int32>
                                <System:Int32>2</System:Int32>
                                <System:Int32>5</System:Int32>
                                <System:Int32>10</System:Int32>
                                <System:Int32>20</System:Int32>
                                <System:Int32>50</System:Int32>
                                <System:Int32>100</System:Int32>
                                <System:Int32>200</System:Int32>
                                <System:Int32>500</System:Int32>
                                <System:Int32>1000</System:Int32>
                            </ComboBox>
                            <TextBlock x:Name="sequenceLabel" HorizontalAlignment="Left" Margin="165,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" Text="SEQUENCE"/>
                            <TextBox HorizontalAlignment="Left" Height="20" Margin="165,39,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" BorderThickness="0" BorderBrush="{x:Null}" Background="White" Padding="1,1,0,0"/>
                        </Grid>
                        <Grid x:Name="textBoxEdit" Background="#FFF7F7F7">
                            <TextBlock HorizontalAlignment="Left" Margin="39,31,0,0" TextWrapping="Wrap" Text="Select Font Family" VerticalAlignment="Top"/>
                            <ComboBox x:Name="fontChoose" HorizontalAlignment="Left" Margin="39,50,0,0" VerticalAlignment="Top" Width="120" Background="#FFF9F9F9" BorderBrush="{x:Null}" IsEditable="True" BorderThickness="0" ItemsSource="{Binding Source={x:Static Fonts.SystemFontFamilies}}" SelectedIndex="40" SelectionChanged="fontChoose_SelectionChanged" />
                            <TextBlock HorizontalAlignment="Left" Margin="22,10,0,0" TextWrapping="Wrap" Text="EDIT TEXT BOX" VerticalAlignment="Top" FontFamily="Segoe UI Semibold"/>
                            <TextBlock HorizontalAlignment="Left" Margin="173,31,0,0" TextWrapping="Wrap" Text="Select Font Size" VerticalAlignment="Top"/>
                            <ComboBox x:Name="fontSizeChoose" HorizontalAlignment="Left" Margin="173,50,0,0" VerticalAlignment="Top" Width="83" Background="#FFF9F9F9" BorderBrush="{x:Null}" IsEditable="True" BorderThickness="0" SelectedIndex="5" SelectionChanged="fontSizeChoose_SelectionChanged">
                                <System:Int32>6</System:Int32>
                                <System:Int32>7</System:Int32>
                                <System:Int32>8</System:Int32>
                                <System:Int32>10</System:Int32>
                                <System:Int32>11</System:Int32>
                                <System:Int32>12</System:Int32>
                                <System:Int32>14</System:Int32>
                                <System:Int32>16</System:Int32>
                                <System:Int32>18</System:Int32>
                                <System:Int32>20</System:Int32>
                                <System:Int32>24</System:Int32>
                                <System:Int32>36</System:Int32>
                                <System:Int32>48</System:Int32>
                                <System:Int32>60</System:Int32>
                                <System:Int32>72</System:Int32>
                                <System:Int32>96</System:Int32>
                                <System:Int32>108</System:Int32>
                            </ComboBox>
                            <CheckBox x:Name="fontBold" Content="&#xE19B;" HorizontalAlignment="Left" Margin="270,53,0,0" VerticalAlignment="Top" BorderThickness="0" FontFamily="Segoe UI Symbol" ToolTip="BOLD" Checked="fontBold_Checked" Unchecked="fontBold_Unchecked"/>
                            <CheckBox x:Name="fontItalic" Content="&#xE199;" HorizontalAlignment="Left" Margin="325,53,0,0" VerticalAlignment="Top" BorderThickness="0" FontFamily="Segoe UI Symbol" ToolTip="Italic" Checked="fontItalic_Checked" Unchecked="fontItalic_Unchecked"/>
                            <TextBlock HorizontalAlignment="Left" Margin="270,31,0,0" TextWrapping="Wrap" Text="Font Face Style" VerticalAlignment="Top"/>
                            <Slider x:Name="heightSlider" HorizontalAlignment="Left" Margin="378,53,0,0" VerticalAlignment="Top" Width="120" Maximum="112" Minimum="10" LargeChange="2" SmallChange="1" Height="22" Delay="100" RenderTransformOrigin="0.5,0.5" ValueChanged="heightSlider_ValueChanged" Value="26"/>
                            <TextBlock x:Name="heightLabel" HorizontalAlignment="Left" Margin="378,31,0,0" TextWrapping="Wrap" Text="Height" VerticalAlignment="Top"/>
                            <Slider x:Name="widthSlider" HorizontalAlignment="Left" Margin="507,53,0,0" VerticalAlignment="Top" Width="120" Maximum="512" Minimum="10" LargeChange="2" SmallChange="1" Height="22" Delay="100" RenderTransformOrigin="0.5,0.5" ValueChanged="widthSlider_ValueChanged" Value="120"/>
                            <TextBlock x:Name="widthLabel" HorizontalAlignment="Left" Margin="507,31,0,0" TextWrapping="Wrap" Text="Width" VerticalAlignment="Top"/>
                            <CheckBox x:Name="borderCheck" Content="&#xE14E;" HorizontalAlignment="Left" Margin="638,53,0,0" VerticalAlignment="Top" BorderThickness="0" FontFamily="Segoe UI Symbol" ToolTip="BOLD" IsChecked="True" Checked="borderCheck_Checked" Unchecked="borderCheck_Unchecked"/>
                            <TextBlock HorizontalAlignment="Left" Margin="638,31,0,0" TextWrapping="Wrap" Text="Border" VerticalAlignment="Top"/>
                        </Grid>
                    </Grid>
                    <Grid x:Name="fileGrid" Background="#FFF7F7F7" d:IsHidden="True">
                        <Button x:Name="newButton" HorizontalAlignment="Left" Width="61" 
							BorderBrush="{x:Null}" Background="{x:Null}" FontFamily="Segoe UI Symbol" 
							FontSize="20" BorderThickness="0" Padding="0" ToolTip="New Circuit" Click="newButton_Click">
                            <StackPanel>
                                <TextBlock x:Name="penIcon_Copy4" Text="&#xE132;" TextAlignment="Center" FontSize="30" Height="36" Width="38" Foreground="White" Padding="0"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="saveButton" HorizontalAlignment="Left" Width="61" 
							BorderBrush="{x:Null}" Background="{x:Null}" FontFamily="Segoe UI Symbol" 
							FontSize="20" BorderThickness="0" Padding="0" Margin="61,0,0,0" ToolTip="Save Circuit" Click="saveButton_Click">
                            <StackPanel>
                                <TextBlock x:Name="penIcon_Copy3" Text="&#xE105;" TextAlignment="Center" FontSize="30" Height="36" Width="38" Foreground="#FF1C89E4" Padding="0"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="openButton" HorizontalAlignment="Left" Width="61" 
							BorderBrush="{x:Null}" Background="{x:Null}" FontFamily="Segoe UI Symbol" 
							FontSize="20" BorderThickness="0" Padding="0" Margin="122,0,0,0" ToolTip="Open Circuit" Click="openButton_Click">
                            <StackPanel>
                                <TextBlock x:Name="penIcon_Copy5" Text="&#xE1C1;" TextAlignment="Center" FontSize="30" Height="36" Width="38" Foreground="#FFFFF6BF" Padding="0"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Grid>
                <Menu Height="20" VerticalAlignment="Top" Background="{x:Null}">
                    <MenuItem x:Name="fileMenu" Header="FILE" Background="WhiteSmoke" BorderThickness="0" Padding="6,0" Margin="5,0,0,0" Height="20" Click="fileMenu_Click"/>
                    <MenuItem x:Name="editMenu" Header="EDIT" Background="{x:Null}" BorderThickness="0" Height="20" Margin="0"/>
                    <MenuItem x:Name="toolsMenu" Header="TOOLS" Background="{x:Null}" BorderThickness="0" Height="20" Margin="0"/>
                    <MenuItem x:Name="viewMenu" Header="VIEW" Background="{x:Null}" BorderThickness="0" Height="20" Margin="0"/>
                    <MenuItem x:Name="circuitMenu" Header="CIRCUIT" Background="{x:Null}" BorderThickness="0" Height="20" Margin="0" Width="55" Click="circuitMenu_Click"/>
                </Menu>
            </Grid>

        </Grid>
        <Grid x:Name="resizeGrid" Panel.ZIndex="1">
            <Rectangle
				Stroke="{x:Null}"
				Fill="Transparent"
				VerticalAlignment="Top"
				Height="2"
				x:Name="top"
				Margin="2,0" MouseMove="ResizeRectangle_MouseMove" PreviewMouseDown="ResizeRectangle_PreviewMouseDown" />
            <Rectangle
				Stroke="{x:Null}"
				Fill="Transparent"
				x:Name="bottom"
				Height="2"
				VerticalAlignment="Bottom"
				Margin="2,0" MouseMove="ResizeRectangle_MouseMove" PreviewMouseDown="ResizeRectangle_PreviewMouseDown" />
            <Rectangle
				Stroke="{x:Null}"
				Fill="Transparent"
				HorizontalAlignment="Left"
				Margin="0,2"
				Width="2"
				x:Name="left" MouseMove="ResizeRectangle_MouseMove" PreviewMouseDown="ResizeRectangle_PreviewMouseDown"/>
            <Rectangle
				Stroke="{x:Null}"
				Fill="Transparent"
				Margin="0,2"
				Width="2"
				HorizontalAlignment="Right"
				x:Name="right" MouseMove="ResizeRectangle_MouseMove" PreviewMouseDown="ResizeRectangle_PreviewMouseDown" />
            <Rectangle
				Stroke="{x:Null}"
				Fill="Transparent"
				HorizontalAlignment="Left"
				VerticalAlignment="Bottom"
				Width="3"
				Height="3"
				x:Name="bottomLeft" MouseMove="ResizeRectangle_MouseMove" PreviewMouseDown="ResizeRectangle_PreviewMouseDown" />
            <Rectangle
				Stroke="{x:Null}"
				Fill="Transparent"
				VerticalAlignment="Bottom"
				Height="3"
				Width="3"
				HorizontalAlignment="Right"
				x:Name="bottomRight" MouseMove="ResizeRectangle_MouseMove" PreviewMouseDown="ResizeRectangle_PreviewMouseDown" />
            <Rectangle
				Stroke="{x:Null}"
				Fill="Transparent"
				HorizontalAlignment="Right"
				Width="3"
				Height="3"
				VerticalAlignment="Top"
				x:Name="topRight" MouseMove="ResizeRectangle_MouseMove" PreviewMouseDown="ResizeRectangle_PreviewMouseDown" />
            <Rectangle
				Stroke="{x:Null}"
				Fill="Transparent"
				HorizontalAlignment="Left"
				Width="3"
				VerticalAlignment="Top"
				Height="3"
				x:Name="topLeft" MouseMove="ResizeRectangle_MouseMove" PreviewMouseDown="ResizeRectangle_PreviewMouseDown" />
        </Grid>
    </Grid>
</Window>