<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Controls="clr-namespace:Logic.Circuit.Controls" x:Class="Logic.Circuit.Controls.LED" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="21" Height="21" RenderTransformOrigin="0.5,0.5" Tag="LED">
    <UserControl.RenderTransform>
        <TransformGroup>
            <ScaleTransform ScaleX="0.5" ScaleY="0.5"/>
            <SkewTransform/>
            <RotateTransform/>
            <TranslateTransform/>
        </TransformGroup>
    </UserControl.RenderTransform>
    <Controls:PinControl x:Name="ledPin" HorizontalAlignment="Left" Margin="8,8,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Brush="#FFDE5757">
        <Controls:PinControl.RenderTransform>
            <TransformGroup>
                <ScaleTransform ScaleX="4" ScaleY="4"/>
                <SkewTransform/>
                <RotateTransform/>
                <TranslateTransform/>
            </TransformGroup>
        </Controls:PinControl.RenderTransform>
    </Controls:PinControl>
</UserControl>
